{% extends "layouts/site.twig" %}

{% block main %}

	<div class="page">
				
		{% for block in intro_blocks %}
			<a href="{{get_permalink(block.ID)}}" class="page__leaderboard">
				{% include 'includes/leaderboard.twig' with {'post': block, 'modifier': loop.index0 is odd ? 'leaderboard--info-left' : 'eaderboard--info-right' } %}
			</a>
		{% endfor %}

		{% if quote %}
			<blockquote  class="page__quote quote">
				<div class="quote__title title title--small">{{quote}}</div>
				<div class="quote__source">{{get_field('caption', post.ID)}}</div>
			</blockquote >
		{% endif %}

		<ul class="page__categories categories">

			{% for category in categories %}
				<li class="categories_item">

					<div class="categories__image">
						
					</div>

					<div class="categories__info">

						<div class="categories__caption">
							
						</div>
						
						<h5 class="categories__title">
							{{category.name}}
						</h5>

					</div>
				</li>
			{% endfor %}

		</ul>

	</div>

{% endblock %}