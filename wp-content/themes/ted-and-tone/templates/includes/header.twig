<div class="header__menu">
    <nav class="menu">
        <input class="menu__toggle" id="menu__toggle" type="checkbox" />
        <label class="menu__label title title--small" for="menu__toggle">
            <div class="menu__hamburger hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <span class="menu__title header__menu-title">{{menu_shop.name}}</span>
        </label>
